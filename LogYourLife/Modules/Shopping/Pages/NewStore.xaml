<Page x:Class="LogYourLife.Modules.Shopping.Pages.NewStore"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LogYourLife.Modules.Shopping.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="250"
      Title="NewStore">

    <StackPanel>
        <Label>NewStore</Label>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0">Name</Label>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="tbName"></TextBox>
            <Button x:Name="btnSave" Grid.Column="1" Grid.Row="1" Click="btnSave_Click">btnSave</Button>
        </Grid>
    </StackPanel>

</Page>
